{
  "rootDir": "../../",
  "moduleNameMapper": {
    "\\.(css|less|jpg|jpeg|png|webp)$": "<rootDir>/config/jest/mockStyle.js",
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "testEnvironment": "jsdom",
  "testMatch": [
    "**/__tests__/**/*.+(ts|tsx|js)",
    "**/?(*.)+(spec|test).+(ts|tsx|js)"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "verbose": true
}
